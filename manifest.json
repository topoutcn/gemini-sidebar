{
  "manifest_version": 3,
  "name": "Gemini Sidebar",
  "version": "1.0.0",
  "description": "在浏览器侧边栏中使用 Gemini，支持提取页面内容和 YouTube 增强",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "declarativeNetRequest",
    "contextMenus",
    "commands"
  ],
  "host_permissions": [
    "https://gemini.google.com/*",
    "https://www.youtube.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["youtube-page-script.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["youtube-content-script.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["gemini-early-inject.js"],
      "all_frames": true,
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["gemini-inject.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "commands": {
    "_execute_side_panel": {
      "suggested_key": {
        "default": "Alt+G"
      },
      "description": "打开/关闭 Gemini 侧边栏"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "Gemini Sidebar"
  }
}
